# Include important files in the package
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include alembic.ini
include marketdata_cli.py
include mapi.bat

# Include configuration files
recursive-include marketdata_api/config *.py *.yaml *.json
recursive-include marketdata_api/schema *.py *.json

# Include alembic migrations
recursive-include alembic *.py *.mako
recursive-include alembic/versions *.py

# Include frontend assets if needed
recursive-include frontend/templates *.html
recursive-include frontend/static *.css *.js *.png *.jpg *.ico

# Include documentation
recursive-include docs *.md *.yaml *.json

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
