# Include important files in the package
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt

# Configuration files
include config/alembic.ini
include config/pytest.ini
include config/.env.example

# Deployment files
include deployment/mapi.bat
include deployment/install.bat
include deployment/install.sh
include deployment/Dockerfile
include deployment/docker-compose.yml

# Include package source
recursive-include src/marketdata_api *.py *.yaml *.json

# Include alembic migrations
recursive-include alembic *.py *.mako
recursive-include alembic/versions *.py

# Include frontend assets if needed
recursive-include frontend/templates *.html
recursive-include frontend/static *.css *.js *.png *.jpg *.ico

# Include documentation
recursive-include docs *.md *.yaml *.json

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
