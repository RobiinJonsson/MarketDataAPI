# Enhanced Environment Configuration
# Copy this to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///marketdata_api/database/marketdata.db
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# External API Keys
OPENFIGI_API_KEY=your_openfigi_api_key
GLEIF_API_KEY=your_gleif_api_key_if_needed

# Data Processing Configuration
ESMA_DATA_PATH=/path/to/esma/downloads
ESMA_START_DATE=2025-01-01
ESMA_END_DATE=2025-12-31
DATA_CACHE_TTL=3600
BATCH_PROCESSING_SIZE=100

# File Upload Configuration
MAX_UPLOAD_SIZE=500
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=yaml,yml,json

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=10
LOG_BACKUP_COUNT=5

# Cache Configuration  
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple

# Default Exchange Settings
DEFAULT_EXCHANGE_CODE=SS
EXCHANGE_MAPPING_FILE=config/exchange_codes.json
