# Enhanced Environment Configuration
# Copy this to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
DEBUG=True

# Database Configuration
# Set to "sqlite" for local SQLite database or "azure_sql" for Azure SQL Database
DATABASE_TYPE=sqlite

# SQLite Configuration (only used when DATABASE_TYPE=sqlite)
SQLITE_DB_FILE=yourdatabase.db                    # Custom database filename
SQLITE_DB_PATH=/custom/path/to/database.db      # Custom full path to database file

DATABASE_URL=sqlite:///marketdata_api/database/marketdata.db
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# Azure SQL Database Configuration (only needed if DATABASE_TYPE=azure_sql)
AZURE_SQL_SERVER=yourazure_sql_server.database.windows.net
AZURE_SQL_DATABASE=your_azure_sql_database
AZURE_SQL_USERNAME=your_azure_sql_username
AZURE_SQL_PASSWORD=your_azure_sql_password
AZURE_SQL_PORT=1433 # Default Azure SQL port

# External API Keys
OPENFIGI_API_KEY=your_openfigi_api_key
GLEIF_API_KEY=your_gleif_api_key_if_needed

# Data Processing Configuration
DOWNLOADS_PATH=/path/to/esma/downloads
ESMA_START_DATE=2025-01-01
ESMA_END_DATE=2025-12-31
DATA_CACHE_TTL=3600
BATCH_PROCESSING_SIZE=100

# File Upload Configuration
MAX_UPLOAD_SIZE=500
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=yaml,yml,json

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=10
LOG_BACKUP_COUNT=5

# Cache Configuration  
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple

# Default Exchange Settings
DEFAULT_EXCHANGE_CODE=SS
EXCHANGE_MAPPING_FILE=config/exchange_codes.json
